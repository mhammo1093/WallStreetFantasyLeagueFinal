<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.capstone.hammond.wallstreetfantasyleaguefinal.StandingsFragment">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Standings"
    android:id="@+id/textView12"
    android:layout_below="@+id/textView16"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
        android:paddingBottom="10dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="League Name"
    android:id="@+id/textView16"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
        android:paddingBottom="25dp" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Name"
    android:ems="10"
    android:id="@+id/player1"
    android:layout_below="@+id/textView12"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/textView16"
    android:layout_toLeftOf="@+id/textView16"
    android:layout_alignRight="@+id/player2"
    android:layout_alignEnd="@+id/player2" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Name"
    android:ems="10"
    android:id="@+id/player2"
    android:layout_below="@+id/player1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Name"
    android:ems="10"
    android:id="@+id/player3"
    android:layout_below="@+id/player2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Name"
    android:ems="10"
    android:id="@+id/player4"
    android:layout_below="@+id/player3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Name"
    android:ems="10"
    android:id="@+id/player5"
    android:layout_below="@+id/player4"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:text="Name"
    android:ems="10"
    android:id="@+id/player6"
    android:layout_below="@+id/player5"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Wins"
    android:id="@+id/textView17"
    android:layout_above="@+id/player1"
    android:layout_toRightOf="@+id/player1"
    android:layout_toEndOf="@+id/player1"
        android:paddingBottom="10dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Losses"
    android:id="@+id/textView18"
    android:layout_above="@+id/player1"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
        android:paddingBottom="10dp" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player1_win"
    android:layout_below="@+id/textView17"
    android:layout_alignLeft="@+id/textView17"
    android:layout_alignStart="@+id/textView17"
    android:layout_alignRight="@+id/textView17"
    android:layout_alignEnd="@+id/textView17" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player2_win"
    android:layout_below="@+id/player1_win"
    android:layout_alignLeft="@+id/player1_win"
    android:layout_alignStart="@+id/player1_win"
    android:layout_alignRight="@+id/player1_win"
    android:layout_alignEnd="@+id/player1_win" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player3_win"
    android:layout_below="@+id/player2"
    android:layout_toRightOf="@+id/player2"
    android:layout_alignRight="@+id/player2_win"
    android:layout_alignEnd="@+id/player2_win" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player4_win"
    android:layout_alignTop="@+id/player4"
    android:layout_toRightOf="@+id/player4"
    android:layout_alignRight="@+id/player3_win"
    android:layout_alignEnd="@+id/player3_win" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player5_win"
    android:layout_above="@+id/player6"
    android:layout_toRightOf="@+id/player5"
    android:layout_alignRight="@+id/player3_win"
    android:layout_alignEnd="@+id/player3_win" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player1_loss"
    android:layout_alignTop="@+id/player1_win"
    android:layout_alignLeft="@+id/textView18"
    android:layout_alignStart="@+id/textView18"
    android:layout_alignRight="@+id/textView18"
    android:layout_alignEnd="@+id/textView18" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player2_loss"
    android:layout_below="@+id/player1_loss"
    android:layout_alignLeft="@+id/player1_loss"
    android:layout_alignStart="@+id/player1_loss" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player3_loss"
    android:layout_above="@+id/player4"
    android:layout_alignLeft="@+id/player2_loss"
    android:layout_alignStart="@+id/player2_loss" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player4_loss"
    android:layout_alignTop="@+id/player4"
    android:layout_alignLeft="@+id/player3_loss"
    android:layout_alignStart="@+id/player3_loss" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player5_loss"
    android:layout_below="@+id/player4_loss"
    android:layout_alignLeft="@+id/player4_loss"
    android:layout_alignStart="@+id/player4_loss" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player6_loss"
        android:layout_below="@+id/player5_loss"
        android:layout_alignLeft="@+id/player5_loss"
        android:layout_alignStart="@+id/player5_loss" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/player6_win"
    android:layout_alignBottom="@+id/player6"
    android:layout_toRightOf="@+id/player5"
    android:layout_alignRight="@+id/player5_win"
    android:layout_alignEnd="@+id/player5_win" />

</RelativeLayout>